function Add-Mailbox {

[cmdletbinding()]
param(
      [Parameter(Mandatory=$True,
      HelpMessage = "Enter the source SAMACCOUNTNAME or E-mail mailbox")]
      [string]$username1,

      [Parameter(Mandatory=$True,
      HelpMessage = "Enter the destination SAMACCOUNTNAME or E-mail mailbox")]
      [string]$username2,

      [Parameter(Mandatory=$True,
      HelpMessage = 'Choose one of the following rights "FullAcess" "None" ')]
      [string]$access
)


add-mailboxpermission $username1 -user $username2 -Accessrights $access

}


function Check-Mailbox {

[cmdletbinding()]
param(
      [Parameter(Mandatory=$True,
      HelpMessage = "Enter the SAMACCOUNTNAME or E-mail of the user to check their mailbox permissions")]
      [string]$username

)

get-mailboxpermission $username

}

function add-sendbehalf {

[cmdletbinding()]
param(
      [Parameter(Mandatory=$True,
      HelpMessage = "Enter the source SAMACCOUNTNAME or E-mail mailbox")]
      [string]$username1,

      [Parameter(Mandatory=$True,
      HelpMessage = "Enter the SAMACCOUNTNAME or E-mail of the user to have send on behalf of permission")]
      [string]$username2
)


add-mailboxpermission $username1 -grantsendonbehalfto $username2

}


function Add-Sendas {

[cmdletbinding()]
param(
      [Parameter(Mandatory=$True,
      HelpMessage = "Enter the source SAMACCOUNTNAME or E-mail mailbox")]
      [string]$username1,

      [Parameter(Mandatory=$True,
      HelpMessage = "Enter the SAMACCOUNTNAME or E-mail of the user to have send as permission")]
      [string]$username2
)


add-mailboxpermission $username1 -accessrights SendAs -user $username2

}


function Check-Mailrules{

[cmdletbinding()]
param(
      [Parameter(Mandatory=$True,
      HelpMessage = "Enter the SAMACCOUNTNAME or E-mail of the user to list the rules they have")]
      [string]$username

)

get-inboxrule -mailbox $username | select name, description | fl

}

function get-sharedmailbox {

Get-Mailbox -Filter {recipienttypedetails -eq "SharedMailbox"} | Get-Mailboxpermission | where {$_.isinherited -eq $false}  | export-csv C:\temp\fullsharedmailbox.csv
} 
